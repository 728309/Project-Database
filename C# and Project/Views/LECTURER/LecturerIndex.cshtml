@{
    ViewData["Title"] = "LECTURER";
}

<div class="text-center">
    <h1 class="display-4">LECTURER</h1>
    <p>Number of lecturers in the list: @Model.Count</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>LecturerID</th>
            <th>RoomID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (LECTURER lecturer in Model)
            {
                <tr>
                    <td>@lecturer.LecturerID</td>
                    <td>@lecturer.FirstName</td>
                    <td>@lecturer.LastName</td>
                    <td>@lecturer.PhoneNumber</td>
                    <td>@lecturer.DateofBirth</td>
                </tr>
            }
        }
    </tbody>
</table>
