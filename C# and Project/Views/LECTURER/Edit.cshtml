@model C__and_Project.Models.Lecturer

@{
    ViewData["Title"] = "Edit Lecturer";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Edit Lecturer</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="LecturerID" />

        <div class="mb-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" required />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" type="number" class="form-control" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Room</label>
                <input asp-for="Room" type="number" class="form-control" required />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="DateofBirth" class="form-label">Date of Birth</label>
                <input asp-for="DateofBirth" class="form-control" required />
                <span asp-validation-for="DateofBirth" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center gap-3 py-3">
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>

        </div>
    </form>
</div>
