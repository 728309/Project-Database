@model C__and_Project.Models.Lecturer

@{
    ViewData["Title"] = "Delete Lecturer";
}

<h1>Delete Lecturer</h1>

<form asp-action="Delete" method="post">
    <input hidden asp-for="LecturerID" />

    <div class="form-group py-2">
        <label for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control" required />
    </div>

    <div class="form-group py-2">
        <label for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control" required />
    </div>

    <div class="form-group py-2">
        <label for="PhoneNumber">Room ID:</label>
        <input asp-for="PhoneNumber" type="number" class="form-control" required />
    </div>

    <div class="form-group py-2">
        <label for="DateofBirth">DateofBirth:</label>
        <input asp-for="DateofBirth" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

