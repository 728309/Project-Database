@model IEnumerable<C__and_Project.Models.Lecturer>
@{
    ViewData["Title"] = "Lecturers";
}

<form method="get">
    <label for="lastNameFilter">Filter by Last Name:</label>
    <input type="text" id="lastNameFilter" name="lastNameFilter" />
    <button type="submit">Search</button>
</form> 

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>LecturerID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>PhoneNumber</th>
            <th>DateofBirth</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Lecturer lecturer in Model)
            {
                <tr>
                    <td>@lecturer.LecturerID</td>
                    <td>@lecturer.FirstName</td>
                    <td>@lecturer.LastName</td>
                    <td>@lecturer.PhoneNumber</td>
                    <td>@lecturer.DateofBirth</td>
                    <td>
                        <a href="@Url.Action("Edit", "Lecturer", new { id = lecturer.LecturerID })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Lecturer", new { id = lecturer.LecturerID })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
