@model IEnumerable<C__and_Project.Models.Lecturer>

@{
    ViewData["Title"] = "Lecturer Page";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Lecturers</h2>

    <form method="get" class="mb-4">
        <div class="row align-items-center">
            <div class="col-md-6 mb-3 mb-md-0">
                <div class="input-group">
                    <span class="input-group-text bg-light" id="lastNameFilterLabel"><i class="fas fa-search"></i></span>
                    <input type="text" class="form-control" id="lastNameFilter" name="lastNameFilter" placeholder="Search by Last Name" aria-describedby="lastNameFilterLabel" />
                </div>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </div>
    </form>

    <p>
        <a href="@Url.Action("Create", "Lecturer")" class="btn btn-success btn-lg w-100 mb-3">+ Add New Lecturer</a>
    </p>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-light">
                <tr>
                    <th>Lecturer Number</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Room</th>
                    <th>Phone Number</th>
                    <th>Date of Birth</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lecturer in Model)
                {
                    <tr>
                        <td>@lecturer.LecturerNumber</td>
                        <td>@lecturer.FirstName</td>
                        <td>@lecturer.LastName</td>
                        <td>@lecturer.Room</td>
                        <td>@lecturer.PhoneNumber</td>
                        <td>@lecturer.DateofBirth.ToString("dd-MM-yyyy")</td>
                        <td>
                            <a href="@Url.Action("Edit", "Lecturer", new { id = lecturer.LecturerID })" class="btn btn-warning btn-sm text-white">Edit</a>
                            <a href="@Url.Action("Delete", "Lecturer", new { id = lecturer.LecturerID })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
