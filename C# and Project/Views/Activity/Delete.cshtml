@model C__and_Project.Models.Activity

@{
    ViewData["Title"] = "Delete Activity";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <form method="post">
        <div class="alert alert-danger">
            <h4 class="alert-heading">Are you sure you want to delete this activity?</h4>
            <p><strong>Activity Name:</strong> @Model.Name</p>
            <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
            <p><strong>Start Time:</strong> @Model.StartTime.ToString(@"hh\:mm")</p>
            <p><strong>Duration:</strong> @Model.Duration minutes</p>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Activity")">Cancel</a>
        </div>
    </form>
</div>
