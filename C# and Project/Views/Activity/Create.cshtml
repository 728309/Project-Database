@model C__and_Project.Models.Activity

@{
    ViewData["Title"] = "Create Activity";
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <form method="post">
        <div class="form-group">
            <label for="Name">Activity Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
        </div>

        <div class="form-group">
            <label for="Date">Date</label>
            <input type="date" class="form-control" id="Date" name="Date" value="@((Model.Date == DateTime.MinValue) ? DateTime.Now.ToString("yyyy-MM-dd") : Model.Date.ToString("yyyy-MM-dd"))" required />
        </div>

        <div class="form-group">
            <label for="StartTime">Start Time</label>
            <input type="time" class="form-control" id="StartTime" name="StartTime" value="@((Model.StartTime == TimeSpan.Zero) ? "" : Model.StartTime.ToString(@"hh\:mm"))" required />
        </div>

        <div class="form-group">
            <label for="Duration">Duration (minutes)</label>
            <input type="number" class="form-control" id="Duration" name="Duration" value="@((Model.Duration == 0) ? "" : Model.Duration.ToString())" required />
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary">Create Activity</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Activity")">Back to Activities</a>
        </div>
    </form>
</div>
