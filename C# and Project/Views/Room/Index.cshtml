@{
}
@model List<Room>

<h1 class="text-center my-4">Room List</h1>
<form method="get" class="mb-3">
    <label for="capacity">Filter by Capacity:</label>
    <input type="number" name="capacity" id="capacity" class="form-control d-inline w-auto" />
    <button type="submit" class="btn btn-secondary">Filter</button>
</form>

<table class="table table-striped table-hover" border="1">
    <thead class="thead-dark">
    <tr>
        <th>Room ID</th>
        <th>Room Type</th>
        <th>Capacity</th>
        <th>Room Number</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var room in Model)
    {
        <tr>
            <td>@room.RoomID</td>
            <td>@room.RoomType</td>
            <td>@room.Capacity</td>
            <td>@room.RoomNumber</td>
            <td>
                <a href="@Url.Action("Details", "Room", new { id = room.RoomID })">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<a href="@Url.Action("Create", "Room")">Create New Room</a>
