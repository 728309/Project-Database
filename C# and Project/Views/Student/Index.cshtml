@model IEnumerable<C__and_Project.Models.Student>

@{
    ViewData["Title"] = "Student Page";
}

<h2>Students</h2>

<form method="get">
    <label for="lastNameFilter">Filter by Last Name:</label>
    <input type="text" id="lastNameFilter" name="lastNameFilter" />
    <button type="submit">Search</button>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Room Id</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.RoomID</td>
                <td>@student.Date.ToString("dd-MM-yyyy")</td>
                <td>
                    <a href="@Url.Action("Edit", "Student", new { id = student.StudentID })" class="btn btn-primary btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Student", new { id = student.StudentID })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
