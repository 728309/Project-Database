@model C__and_Project.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Student ID
        </dt>
        <dd class="col-sm-10">
            @Model.StudentId
        </dd>
        <dt class="col-sm-2">
            Drink ID
        </dt>
        <dd class="col-sm-10">
            @Model.DrinkId
        </dd>
        <dt class="col-sm-2">
            Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Amount
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="StudentId" />
        <input type="hidden" asp-for="DrinkId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<a asp-action="Index">Back to List</a>
